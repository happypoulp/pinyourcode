extends layout

block css
  link(rel='stylesheet', href='css/index.css')
block js
  script(src="js/require-jquery.js", data-main="js/modules/main")

block content
  div.viewport
    div#pages
      div#friends_list
      div#friend_details
        div#friend_details_inner
        form.add_extension_form(action="/friends/")
          input(type="text",name="extension")
          input(type="submit")
      div#friend_search
        form#add_friend_form(action="/friends", method="post")
          input(type="text", name="friend_name", placeholder="John Doe")
          div#fb_search_results
      div#logout_message.bottom
